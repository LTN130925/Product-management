mixin select-tree(records, parentId, level = 1)
  each item in records
    - const prefix = Array(level + 1).join('-- ')
    if parentId == item.id
      option(value=item.id selected=true) #{prefix}#{item.title}
    else
      option(value=item.id) #{prefix}#{item.title}
    if item.children && item.children.length > 0
      +select-tree(item.children, parentId, level + 1)