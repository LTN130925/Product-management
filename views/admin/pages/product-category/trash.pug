extends ../../layouts/default.pug

include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/limitItem.pug
include ../../mixins/sortItem.pug
include ../../mixins/table.pug

block main
  +alert-success(5000)

  h1 Thùng rác

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row

        .col-6
          +filterStatus(filterStatus)

        .col-6
          +search(keyword)

  //.card.mb-3
  //  .card-header Sắp xếp
  //  .card-body
  //    .row
  //      .col-2
  //        +sortItem("trash")

  .card.mb-3
    .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-md-6.d-flex
            +form-change-multi(`${prefixAdmin}/products-category/trash/change-multi?_method=PATCH`, "permanentlyDelete-all")

            .ml-2
              +limitItem(prefixAdmin)

          .col-6.d-flex
            .ml-auto
              a(
                href=`${prefixAdmin}/products-category`
                class="btn btn-outline-primary"
              )
                i(class="fas fa-arrow-left")

      table(
        class="table table-hover table-sm"
        checkbox-multi
      )
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Thời gian bị xóa
            th Trạng thái
            th Hành động

        tbody
          if (records)
            +table(records, 'trash')

  form(
    action="",
    method="POST"
    id="form-change-status"
    data-path=`${prefixAdmin}/products-category/trash/change-status`
  )

  form(
    action="",
    method="POST"
    id="form-delete-item"
    data-path=`${prefixAdmin}/products-category/trash/permanent-delete`
  )

  form(
    action="",
    method="POST"
    id="form-recovery-item"
    data-path=`${prefixAdmin}/products-category/trash/recovery`
  )

  script(src="/admin/js/product.js")
  script(src="/admin/js/trash.js")


