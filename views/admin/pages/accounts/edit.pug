extends ../../layouts/default.pug

include ../../mixins/alert.pug

block main
  if (role.permissions.includes('accounts_edit')) 
    h1(class="mb-4") Chỉnh sửa tại khoản

    +alert-error(5000)

    .card.mb-3
      .card-header Chỉnh sửa tại khoản
      .card-body
        form(
          action=`${prefixAdmin}/accounts/edit/${records.id}?_method=PATCH`
          method="POST"
          enctype="multipart/form-data"
        )
          div(class="form-group")
            label(for="fullName") Họ tên *
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              value=records.fullName
              required
            )
          
          div(class="form-group")
            label(for="email") Email *
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              value=records.email
              required
            )

          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
            )
            small.text-muted.d-block.mt-1
            | Mật khẩu phải có:
            ul.mb-0
              li Ít nhất 1 chữ in hoa (A–Z)
              li Ít nhất 1 chữ thường (a–z)
              li Ít nhất 1 chữ số (0–9)
              li Ít nhất 1 ký tự đặc biệt (@, #, !, v.v.)
              li Không chứa khoảng trắng
              li Độ dài từ 8 đến 16 ký tự

          div(class="form-group")
            label(for="phone") Số điện thoại
            input(
              type="text"
              class="form-control"
              id="phone"
              name="phone"
              value=records.phone
            )

          div(
            class="form-group" 
            upload-image
          )
            label(for="avatar") Avatar
            input(
              type="file"
              class="form-control-file"
              id="avatar"
              name="avatar"
              accept="image/*"
              upload-image-input
            )
            div(
              class="image-preview-wrapper"
            )
              img(
                src=records.avatar 
                class="image-preview"
                upload-image-preview
              )
              button(
                type="button",
                button-remove-image
              ) X
              
          div(class="form-group")
            label(for="role_id") Phân quyền
            select(name="role_id" id="role_id" class="form-control")
              option(disabled selected) -- Chọn --
              each item in data
                option(value=item.id selected=(item.id == records.role_id ? true : false)) #{item.title}
          
          div(class="form-group form-check form-check-inline")
            input(
              type="radio"
              class="form-check-input"
              id="statusActive"
              name="status"
              value="active"
              checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động

          div(class="form-group form-check form-check-inline")
            input(
              type="radio"
              class="form-check-input"
              id="statusInActive"
              name="status"
              value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
          
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary"
            ) Cập nhật
  else 
    p Bạn không có quyền chỉnh sửa tài khoản


