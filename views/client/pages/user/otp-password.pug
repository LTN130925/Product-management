extends ../../layouts/default.pug

include ../../mixins/alert.pug
include ../../mixins/alowPass.pug

block main 
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        h1.text-center.mb-4 Nhập mã otp xác thực

        form(action="/user/password/otp", method="POST", autocomplete="off")
          .form-group
            label(for="email") Email
            input#email.form-control(
              type="email",
              name="email",
              required,
              value=email,
              readonly
            )

          .form-group
            label(for="otp") OTP
            input#otp.form-control(
              type="text",
              name="otp",
              required,
              placeholder="Nhập mã OTP"
            )

          button.btn.btn-primary.btn-block(type="submit") Xác nhận

        form(action='/user/password/forgot', method='POST', class='mt-3 text-center')
          input(type='hidden', name='email', value=email)
          button.btn.btn-warning(type='submit') Gửi lại OTP
