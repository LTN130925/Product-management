extends ../../layouts/default.pug

include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
  +alert-error(5000)
  +alert-success(5000)

  h1(class="mb-4") Cập nhật danh mục sản phẩm

    .col-6
      a(
        href=`${prefixAdmin}/products-category`
        class="btn btn-outline-primary"
      )
        i(class="fas fa-arrow-left")

  .card.mb-3
    .card-header Cập nhật danh mục sản phẩm!
    .card-body
      form(
        action=`${prefixAdmin}/products-category/edit/${records.id}?_method=PATCH`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
      )
        div(class="form-group")
          label(for="title") Tiêu đề
          input(
            type="text",
            class="form-control",
            id="title",
            name="title",
            value=records.title
            required
          )

        div(class="form-group")
          label(for="parent_id") Danh mục cha
          select(
            name='parent_id'
            class='form-control'
            id='parent_id'
          )
            option(value='') --- lựa chọn danh mục ----
            if(records)
              +select-tree(recordTree, records.parent_id)

        div(class="form-group")
          label(for="desc") Mô tả
          textarea(
            class="form-control textarea-mce",
            id="desc",
            name="description",
            rows="5"
            value=records.description
          ) #{records.description}

        div(
          class="form-group"
          upload-image
        )
          label(for="thumbnail") Ảnh
          input(
            type="file",
            class="form-control-file",
            id="thumbnail",
            name="thumbnail"
            accept="image/*"
            upload-image-input
          )
          div(
            class="image-preview-wrapper"
          )
            img(
              src=records.thumbnail,
              upload-image-preview,
              class="image-preview"
            )
            button(
              type="button",
              button-remove-image
            ) X


        div(class="form-group")
          label(for="position") Vị trí
          input(
            type="number"
            class="form-control"
            id="position"
            name="position"
            placeholder="Tự động tăng"
            min="1"
            value=records.position
          )

        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(records.status == 'active' ? true : false)
          )
          label(for="statusActive" class="form-check-label") Hoạt động

        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInActive"
            name="status"
            value="inactive"
            checked=(records.status == 'inactive' ? true : false)
          )
          label(for="statusInActive" class="form-check-label") Dừng hoạt động

        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Tạo mới

  script(src="/admin/js/product.js")
