extends ../../layouts/default.pug

include ../../mixins/alert.pug
include ../../mixins/alowPass.pug

block main 
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        h1.text-center.mb-4 Đăng ký tài khoản

        form(action="/user/register", method="POST", autocomplete="off")
          .form-group
            label(for="fullName") Họ và tên
            input#fullName.form-control(
              type="text",
              name="fullName",
              required,
              placeholder="Nhập họ và tên của bạn"
            )

          .form-group
            label(for="email") Email
            input#email.form-control(
              type="email",
              name="email",
              required,
              placeholder="Nhập địa chỉ email"
            )

          .form-group
            label(for="password") Mật khẩu
            input#password.form-control(
              type="password",
              name="password",
              required,
              placeholder="Nhập password"
            )

          .form-group
            label(for="confirmPassword") Xác nhận mật khẩu
            input#confirmPassword.form-control(
              type="password",
              name="confirmPassword",
              required,
              placeholder="Nhập lại password"
            )
            +alowPass()

          button.btn.btn-primary.btn-block(type="submit") Đăng ký
