mixin product-item(item)
  .col-4.mb-3
    .product-item
      .inner-image
        img(src=item.thumbnail, alt=item.title)
        if (item.featured == "1")
          .inner-featured Nổi bật
      .inner-content
        h3.inner-title
          a(href=`/products/detail/${item.slug}`) #{item.title}
        .inner-price-new #{item.newPrice}$
        .inner-price-old #{item.price}$
        .inner-discount #{item.discountPercentage}%

mixin blogs-item(item)
  .col-lg-4.col-md-6.mb-4
    .card.h-100.shadow-sm
      a(href=`/blogs/detail/${item.slug}`)
        img.card-img-top(
          src=item.thumbnail,
          alt=item.title,
          style="height: 200px; object-fit: cover;"
        )
      .card-body
        h5.card-title.mb-2 #{item.title}
        p.card-text.text-muted !{item.description}
        .card-footer.bg-transparent.border-0.pt-0
        a.btn.btn-sm.btn-outline-primary(href=`/blogs/detail/${item.slug}`) Xem chi tiết
