extends ../../layouts/default.pug

include ../../mixins/alert.pug

block main 
  +alert-success(5000)
  +alert-error(5000)

  h1(class='mb-4') Điều chỉnh thông tin cá nhân

  .card.mb-3
    .card-header Điều chỉnh thông tin cá nhân
    .card-body
      form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
      )
        div(class="form-group")
          label(for="fullName") Họ tên *
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
            value=user.fullName
          )

        div(class="form-group")
          label(for="email") Email *
          input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value=user.email
          )
        
        div(class="form-group")
          label(for="phone") Số điện thoại
          input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value=user.phone
          )

        div(
          class="form-group"
          upload-image
        )
          label(for="avatar") Avatar
          input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )
          div(
            class="image-preview-wrapper"
          )
            img(
              src=user.avatar
              class="image-preview"
              upload-image-preview
            )
            button(
              type="button",
              button-remove-image
            ) X
        
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhật
        


